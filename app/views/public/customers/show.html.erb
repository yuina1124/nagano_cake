<h2>public#customers#show</h2>

<h2>マイページ</h2>
<h2>登録情報</h2>
<%= button_to url:customers_edit_path, method: :get do %>
  編集する
<% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <th>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </th>
    </tr>
    <tr>
      <th>カナ</th>
      <th>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
  </tbody>
  </table>

  <h2>配送先</h2>
    <%= button_to url:addresses_path do %>
      一覧を見る
    <% end %>

  <h2>注文履歴</h2>
    <%= button_to url:admin_path do %>
      一覧を見る
    <% end %>