<h2>public#order#show</h2>

<h2>注文履歴詳細</h2>

<h4>注文情報</h4>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払い方法</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.created_at %></td>
        <td>
          <%= @order.postal_code %>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
        <td><%= @order.payment_method %></td>
      </tr>
      <br>
    </tbody>
  </table>

  <% @orders.each do |order| %>
    <% @total +=  (order.price*1.1*order.amount).floor %>
  <% end %>

<h4>請求情報</h4>
  <table>
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
      <br>
    </thead>
    <tbody>
      <tr>
        <td><%= @total %></td>
        <td>800</td>
        <td><%= @total +800 %></td>
      </tr>
    </tbody>
  </table>

<h4>注文内容</h4>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
        <td><%= order.item.name %></td>
        <td><%= order.price %></td>
        <td><%= order.amount %></td>
        <td><%= (order.price*1.1*order.amount).floor %></td><br>
    </tr>
    <% end %>
  </tbody>

</table>