<h2>public#order#index</h2>

<h2>注文履歴一覧</h2>

<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td>
                <% order.order_details.each do |order_detail|%>
                  <%= order_detail.item.name %>
                <% end %>
            </td>
            <td><%= order.payment %></td>
            <td>
              <%= link_to order_path(order) do %>
                表示する
              <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>