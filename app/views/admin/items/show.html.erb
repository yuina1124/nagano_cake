<h2>admin#items#show</h2>


<h2>商品詳細</h2>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_image(100,100) %>
    </div>
    <table class="table table-hover table-inverse col-md-9">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <th>
            <%= (@item.price*1.1).ceil %>
                (<%= @item.price %>)
          </th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th>
            <% if @item.is_active? %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= link_to edit_admin_item_path(@item) do %>
  編集する
<% end %>