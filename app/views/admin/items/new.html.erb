<h2>admin#items#new</h2>

<h2>商品新規登録</h2>

<%= form_with model: @item, url:admin_items_path, method: :post do |f| %>
    <div class="form_with">
    <label class="col-sm-3">商品画像</label>
    <label class="col-sm-9">
      <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>
    </label>
    </div>

    <div class="form-group">
    <label class="col-sm-3">商品名</label>
    <label class="col-sm-9">
      <%= f.text_field :name %>
    </label>
    </div>

    <div class="form_group">
      <label class="col-sm-3">商品説明</label>
      <label class="col-sm-9">
        <%= f.text_area :introduction %>
      </label>
    </div>
    <!--<h3>ジャンル</h3>-->
        <div class="form-group">
          <label class="col-sm-3">
            <%= f.label :genre, 'ジャンル' %>
          </label>
          <label class="col-sm-9">
            <%= f.select :genre_id, {'ケーキ': 1, 'クッキー': 2,}, {include_blank: '選択してください'}, {class: 'form-control' , required: true } %>
          </label>
        </div>
        </div>

      <div class="form_group">
      <label class="col-sm-3">
        税抜価格
      </label>
      <label class="col-sm-9">
          <%= f.text_field :price %>円
      </label>
      </div>

      <div class="form_group">
      <label class="col-sm-3">販売ステータス</label>

            <label class="col-sm-9">
            <%= f.radio_button :status, :is_active %>
            <%= f.label :status, "販売中", {value: :is_active, style: "display: inline-block;"} %>
            <%= f.radio_button :status, :is_not_active %>
            <%= f.label :status, "販売停止中", {value: :is_not_active, style: "display: inline-block;"} %>
            </label>

      </div>

    <%= f.submit '新規登録' %>
<% end %>