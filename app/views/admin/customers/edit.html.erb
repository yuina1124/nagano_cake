<h2>admin#customer#edit</h2>

<h2>さんの会員情報編集</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  <tbody>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
      <th></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= f.text_field :last_name %></th>
      <th><%= f.text_field :first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= f.text_field :last_name_kana %></th>
      <th><%= f.text_field :first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= f.text_field :postal_code %></th>
      <th></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
      <th></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number %></th>
      <th></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= f.text_field :email %></th>
      <th></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
        <%= f.radio_button :status, :is_active %>
        <%= f.label :status, "有効", {value: :is_active, style: "display: inline-block;"} %>
        <%= f.radio_button :status, :is_not_active %>
        <%= f.label :status, "退会", {value: :is_not_active, style: "display: inline-block;"} %>
      </th>
      <th></th>
    </tr>
  </tbody>
</table>
<%= f.submit '変更を保存' %>
<% end %>
